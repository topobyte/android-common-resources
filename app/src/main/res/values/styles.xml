<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="IconButtonStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <!-- Stuff for laying out content -->

    <style name="TinySpacer">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/horizontal_line_height</item>
        <item name="android:layout_marginTop">@dimen/tiny_spacer</item>
    </style>

    <style name="SmallSpacer">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/horizontal_line_height</item>
        <item name="android:layout_marginTop">@dimen/small_spacer</item>
    </style>

    <style name="MediumSpacer">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/horizontal_line_height</item>
        <item name="android:layout_marginTop">@dimen/medium_spacer</item>
    </style>

    <style name="BigSpacer">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/horizontal_line_height</item>
        <item name="android:layout_marginTop">@dimen/big_spacer</item>
    </style>

    <style name="LargeSpacer">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/horizontal_line_height</item>
        <item name="android:layout_marginTop">@dimen/large_spacer</item>
    </style>

    <style name="HugeSpacer">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/horizontal_line_height</item>
        <item name="android:layout_marginTop">@dimen/huge_spacer</item>
    </style>

    <!-- Misc -->

    <style name="Head" parent="@style/Base.TextAppearance.AppCompat.Headline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Subhead" parent="@style/Base.TextAppearance.AppCompat.Subhead">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Body" parent="@style/Base.TextAppearance.AppCompat.Body1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DialogFont">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

</resources>